<script>
  document.addEventListener('DOMContentLoaded', function () {
    const toggle = document.getElementById('pricing-toggle');
    const labelMonthly = document.getElementById('label-monthly');
    const labelAnnual = document.getElementById('label-annual');

    let isAnnual = true;

    function updatePrices() {
      const priceType = isAnnual ? 'annual' : 'monthly';

      // Update all elements with data attributes
      document.querySelectorAll('[data-annual]').forEach(el => {
        el.textContent = el.getAttribute('data-' + priceType);
      });

      // Update toggle appearance
      if (isAnnual) {
        toggle.classList.add('annual');
        labelAnnual.classList.add('active');
        labelMonthly.classList.remove('active');
      } else {
        toggle.classList.remove('annual');
        labelMonthly.classList.add('active');
        labelAnnual.classList.remove('active');
      }
    }

    toggle.addEventListener('click', function () {
      isAnnual = !isAnnual;
      updatePrices();
    });

    // Also allow clicking on the labels
    labelMonthly.addEventListener('click', function () {
      if (isAnnual) {
        isAnnual = false;
        updatePrices();
      }
    });

    labelAnnual.addEventListener('click', function () {
      if (!isAnnual) {
        isAnnual = true;
        updatePrices();
      }
    });
  });
</script>